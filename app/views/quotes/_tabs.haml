%ul.nav.nav-tabs

  - link = quotes_path(client_id: params[:client_id], supplier_id: params[:supplier_id])
  %li{class: "#{'active' if current_page?(link)}"}
    = link_to 'All Quoted', link

  - link = pending_quotes_path(client_id: params[:client_id], supplier_id: params[:supplier_id])
  %li{class: "#{'active' if current_page?(link)}"}
    = link_to_badge "Offer Required", link, count: @offers_required_count

  - link = pending_client_po_quotes_path(client_id: params[:client_id], supplier_id: params[:supplier_id])
  %li{class: "#{'active' if current_page?(link)}"}
    = link_to_badge 'Awaiting PO', link, count: @awaiting_order_count

  - link = offers_path(client_id: params[:client_id], supplier_id: params[:supplier_id])
  %li{class: "#{'active' if current_page?(link)}"}
    = link_to "Offers", link

%tr.fields
  %td{:style => 'border:none'}
  %td
    Brand
    %br
    =  f.select :supplier_id, options_for_select(Supplier.all.collect{|s| [s.name, s.id]}, f.object.supplier_id), {:include_blank => true}, :class => 'compact'
    %br
    Specs/Description
    %br
    = f.text_area :specs, :class => 'span12 text_area', :rows => 4, :placeholder => "Specs"
    Spec Summary
    %br
    - #FIXME : Move placeholder to a yaml that stores placeholder texts
    = f.text_area :summary, :class => 'span12 text_area', :rows => 4, :placeholder => "Example: 900mmW,EP200x2P,3x2,HR,ENDLESS"
  %td
    .row-fluid
      .span12
        .control-group
          %label.span4.control-label Currency
          .controls.span8
            = f.select(:currency, Currency.all, {}, class: 'span12')

    .row-fluid
      .span12
        .control-group
          %label.span4.control-label Exchange Rate
          .controls.span8
            .input-append.span12
              = f.text_field :currency_conversion, :class => 'prependedInput span7', :placeholder => '1.00'
              .add-on
                PHP

    .row-fluid
      .span12
        .control-group
          %label.span4.control-label VAT Status
          .controls.span8
            = f.text_field :price_vat_status, :class => 'text_field span12', :placeholder => "VAT EX or VAT INC"

    .row-fluid
      .span12
        .control-group
          %label.span4.control-label Supplier Price
          .controls.span8
            = f.text_field :buying_price, :class => 'text_field span12'

    .row-fluid
      .span12
        .control-group
          %label.span4.control-label Our Price
          .controls.span8
            = f.text_field :selling_price, :class => 'text_field span12'

    .row-fluid
      .span12
        .control-group
          %label.span4.control-label Price Basis
          .controls.span8
            = f.text_field :price_basis, :class => 'text_field span12', :placeholder => "FOB LOCATION"

  %td
    %p
      .control-group
        %label.span2.control-label Terms
        .controls.span10
          = f.text_field :terms, :class => 'text_field span10', data: { field_group: 'terms' }
          %button.icon-share.btn-mini{ data: { field_group: 'terms' }, title: "Copy to all offers for the same supplier" }
    %p
      .control-group
        %label.span2.control-label Delivery
        .controls.span10
          = f.text_field :delivery, :class => 'text_field span10', data: { field_group: 'delivery'}
          %button.icon-share.btn-mini{ data: {field_group: 'delivery'}, title: "Copy to all offers for the same supplier" }

    %p
      .control-group
        %label.span2.control-label WTY
        .controls.span10
          = f.text_field :warranty, :class => 'text_field span10', data: { field_group: 'warranty'}
          %button.icon-share.btn-mini{ data: {field_group: 'warranty'}, title: "Copy to all offers for the same supplier" }

    %p
      .control-group
        %label.span2.control-label Notes
        .controls.span10
          = f.text_field :remarks, :class => 'text_area span10', data: { field_group: 'request_notes'}

          %button.icon-share.btn-mini{ data: {field_group: 'request_notes'}, title: "Copy to all offers for the same supplier" }

  %td= f.text_field :order_reference, :class => 'text_field span12'
  %td= link_to_remove_fields "remove", f


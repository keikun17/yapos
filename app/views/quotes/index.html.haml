- model_class = Quote
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:quote_date)
      %th= model_class.human_attribute_name(:quote_reference)
      %th= model_class.human_attribute_name(:requester)
      %th= model_class.human_attribute_name(:quantity)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:status)
      %th= model_class.human_attribute_name(:client)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @quotes.each do |quote|
      %tr
        %td= link_to quote.id, quote_path(quote)
        %td= quote.quote_date
        %td= quote.quote_reference
        %td= quote.requester
        %td= quote.quantity
        %td= quote.description
        %td= quote.status
        %td= quote.client_name 
        %td= quote.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_quote_path(quote), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), quote_path(quote), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_quote_path, :class => 'btn btn-primary'

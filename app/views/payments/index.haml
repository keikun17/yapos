.payments-header
  %h1
    Payments

.pull-right= will_paginate(@payments)

%table.table.payments-list
  %thead
    %tr
      %th.reference Payment reference
      %th Sales Invoice references
      %th RFQ references
      %th PO references
      %th DR references

      %th
  %tbody
    - @payments.each do |payment|
      %tr
        %td= link_to payment.reference, payment
        %td
          - payment.invoices.each do |invoice|
            = link_to invoice.reference, invoice
            %br
        %td
          - payment.quotes.each do |quote|
            = link_to quote.quote_reference, quote
            (#{quote.client.decorate.display_name})
            %br

        %td
          - payment.orders.each do |order|
            = link_to order.reference, order
            %br
        %td
          = payment.offers.where.not(delivery_receipt_reference: nil).collect(&:delivery_receipt_reference).uniq.join(',')

.row-fluid
  .span2
    %h4 Needs Quote
    %ul.unstyled
      - @need_quote.each do |quote|
        %li{style: ' border-left: 2px solid blue; margin-top: 5px; padding-left: 5px'}= link_to quote.quote_reference, quote_path(quote)
  .span2
    %h4 Need Client PO
    %ul.unstyled
      - @waiting_client_order.each do |quote|
        %li{style: 'border-left: 2px solid green; margin-top: 5px; padding-left: 5px'}= link_to quote.quote_reference, quote_path(quote)
  .span2
    %h4 Need to Order from Supplier
    %ul.unstyled

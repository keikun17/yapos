.modal.hide.fade{id: modal_id}
  = form_for offer, url: vendor_code_update_path(offer), method: :patch, html: {class: 'form-horizontal'} do |f|
    .modal-header
      %button.close.data{data: {dismiss: 'modal'}, 'aria-hidden' => true} x
    .modal-body
      .control-group
        %label.control-label SPECS:
        .controls
          = offer.display_specs
      .control-group
        %label.control-label ACTUAL SPECS:
        .controls
          = offer.display_specs
          = simple_format(offer.display_actual_specs)


      %h3 Edit Offer's Vendor Code

      .control-group
        = label_tag :product_id, 'Product', class: 'control-label'
        .controls
          = select_tag :product_id, options_for_select(Product.all.collect{ |p| [p.name, p.id] }),  class: 'span6 text_field', data: {dynamic_select: "vendor_item_code" }

      .control-group
        = f.label :vendor_item_code, 'Select From Existing Vendor Code', class: 'control-label'
        .controls
          = f.select :vendor_item_code, options_for_select( VendorItem.all.collect{|v| [v.code, v.code]} ),  {},class: 'span12 text_field', data: {dynamic_selected: 'vendor_item_code'}

      OR

      .control-group
        = f.label :vendor_item_code, 'New Vendor Code', class: 'control-label'
        .controls
          = f.text_field :vendor_item_code, class: 'span6 text_field'
    .modal-footer
      %button.btn{data: {dismiss:"modal"}, 'aria-hidden' => true} Close
      = f.submit nil, :class => 'btn btn-primary'

.page-header
  %h1 Stocks

= link_to t('.new', :default => t("helpers.links.new")), new_stock_path, :class => 'btn btn-primary'
.pull-right= will_paginate(@stocks)

%table.table
  %thead
    %tr
      %th Reference
      %th Quantity
      %th Unit
      %th description
      %th remarks
      %th Acquired
      %th Used up

  %tbody
    - @stocks.each do |stock|
      %tr
        %td=link_to stock.reference, stock_path(stock)
        %td= stock.quantity
        %td= stock.unit
        %td= stock.description
        %td= stock.remarks
        %td= stock.date_acquired
        %td= stock.date_used_up

!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Mlandcorp Pos"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all"
    %link(href="images/apple-touch-icon-144x144.png" rel="apple-touch-icon-precomposed" sizes="144x144")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon-precomposed" sizes="114x114")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon-precomposed" sizes="72x72")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon-precomposed")
    = yield :header
    -# %link(href="images/favicon.ico" rel="shortcut icon")

  %body
    -unless defined? @print_preview
      .navbar.navbar-inverse.navbar-fluid-top
        .navbar-inner
          .container-fluid
            %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.brand(href="#") MLANDCORP POS
            - if user_signed_in?
              .container.nav-collapse
                %ul.nav
                  %li#quotes-nav= link_to "Price Quotes", quotes_path
                  %li#order-nav= link_to "Client Orders", orders_path
                  %li#supplier-order-nav= link_to "Supplier Orders", supplier_purchases_path
                  %li= link_to "Client Records", clients_path
                  %li= link_to "Supplier Records", suppliers_path
                  %li= link_to "Graph", kanban_path
                  -# %li= link_to "Accounting", accounting_path
                  %li.dropdown
                    %a.dropdown-toggle{data: {toggle: 'dropdown'}}
                      Others
                      %b.caret
                    %ul.dropdown-menu
                      %li= link_to "Stocks Monitoring", stocks_path
                      %li= link_to "Delivery Monitoring", orders_path
                      %li.divider
                      -# %li= link_to "Client Item Codes", client_items_path
                      %li.dropdown-submenu
                        %a{tabindex: '-1', href: '#'} Vendor Item Codes
                        %ul.dropdown-menu
                          %li= link_to "Products List", products_path
                          %li= link_to "Price Trend", price_movements_path
                          %li.divider
                          %li= link_to "Search Vendor Item", search_vendor_item_path
                      %li.divider
                      %li.nav-header
                        Upcoming
                      %li= link_to "Invoice and Receipts", '#', class: 'disabled'

                  %li#nav-search
                    = form_tag search_path, method: :get, class: 'navbar-form' do
                      - params[:search] ||= {}
                      = text_field_tag 'search[string]', params[:search][:string], :class => "navbar-search input-small"
                      = select_tag 'search[type]', options_for_select(['quote','order', ['supplier order', 'supplier_order']], params[:search][:type ]), class: 'compact navbar-search'
                      = button_tag "Search", :class => "btn btn-medium"

                .pull-right
                  = link_to "Log out", destroy_user_session_path, :class => "btn btn-warning", :method => :delete

      #main.container-fluid

        - if Rails.env.development?
          .dev-environment-alert-header
            %strong THIS IS THE DEVELOPMENT ENVIRONMENT

        - if !flash.empty?
          .alert-container
            = bootstrap_flash
        .row-fluid
          .col-sm-12
            = yield
        %footer
          Server time : #{Time.now.to_s}

    - else
      .container
        = yield

    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"

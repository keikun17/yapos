!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Mlandcorp Pos"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all"
    %link(href="images/apple-touch-icon-144x144.png" rel="apple-touch-icon-precomposed" sizes="144x144")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon-precomposed" sizes="114x114")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon-precomposed" sizes="72x72")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon-precomposed")
    = yield :header
    -# %link(href="images/favicon.ico" rel="shortcut icon")

  %body
    -unless @print_preview
      .navbar.navbar-inverse.navbar-fluid-top
        .navbar-inner
          .container-fluid
            %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.brand(href="#") MLANDCORP POS
            .container.nav-collapse
              %ul.nav
                %li= link_to "Graph", kanban_path
                %li= link_to "Client RFQ", pending_quotes_path
                %li= link_to "Client PO", pending_orders_path
                %li= link_to "Supplier PO", supplier_purchases_path
                %li= link_to "Client Records", clients_path
                %li= link_to "Supplier Records", suppliers_path
                %li= link_to "Stocks", stocks_path
                -# %li= link_to "Accounting", accounting_path
                %li
                  = form_tag search_path, method: :get, class: 'navbar-form' do
                    - params[:search] ||= {}
                    = text_field_tag 'search[string]', params[:search][:string], :class => "navbar-search input-small"
                    = select_tag 'search[type]', options_for_select(['quote','order'], params[:search][:type ]), class: 'compact navbar-search'
                    = button_tag "Search", :class => "btn btn-medium"
              .pull-right
                = link_to "Log out", destroy_user_session_path, :class => "btn btn-warning", :method => :delete

      .container-fluid

        .row-fluid
          .span12
            = bootstrap_flash
            = yield
        %footer

    - else
      .container
        = yield

    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"

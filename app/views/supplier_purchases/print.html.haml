%div{style: 'font-size:9px'}
  %h2= Yapos::SETTINGS[:company_name]
  %h5= Yapos::SETTINGS[:address]
  %h5= Yapos::SETTINGS[:contact_number]
  %h5= Yapos::SETTINGS[:email_address]

  %hr

  %table.table-compact
    %tr
      %td
        %strong TO
      %td : #{@supplier_purchase.supplier_name}
    %tr
      %td
        %strong ADDRESS
      %td : #{@supplier_purchase.address}

    %tr
      %td
        %strong ATTENTION
      %td : #{@supplier_purchase.recipient}

    %tr
      %td
        %strong PO#
      %td : #{@supplier_purchase.reference}

    %tr
      %td
        %strong SUBJECT
      %td : #{@supplier_purchase.client_name}

  = render 'supplier_orders', supplier_orders: @supplier_purchase.supplier_orders

  %table
    %tr
      %td
        %strong Delivery
      %td : #{@supplier_purchase.delivery}

    %tr
      %td
        %strong Price Basis
      %td : #{@supplier_purchase.price_basis}

    %tr
      %td 
        %strong Terms
      %td : #{@supplier_purchase.terms}

    %tr
      %td
        %strong Warranty
      %td : #{@supplier_purchase.warranty}

  %strong #{@supplier_purchase.remarks}

  %br
  %br
  %strong #{@supplier_purchase.signatory}
  %br
  %strong #{@supplier_purchase.signatory_position}



.page-header
  %h1= client.name
  - if client.abbrev
    %h3= client.abbrev

  = link_to "List Material Codes", client_client_items_path(client), class: 'btn'

%p
  %strong Emails :
  %br
  = client.emails

%p
  %strong Contact Numbers :
  %br
  = client.contact_numbers

%p
  %strong Address :
  %br
  =simple_format client.address

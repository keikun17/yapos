= form_for @product_field do |f|
  - if @product_field.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product_field.errors.count, "error")} prohibited this product_field from being saved:"
      %ul
        - @product_field.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :unit
    = f.text_field :unit
  .field
    = f.label :product
    = f.select :product_id, Product.all.collect{|c| [c.name, c.id]}, {:include_blank => true}, :class => 'select'
  .field
    = f.label :field_type
    = f.text_field :field_type
  .actions
    = f.submit 'Save'

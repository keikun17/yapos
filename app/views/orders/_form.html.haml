= form_for @order, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :purchase_date, :class => 'control-label'
    .controls
      = f.date_select :purchase_date, :class => 'datetime_select'

  #fields-for-custom
    %h3 Custom Quotes
    #custom-fields
      %legend Fill these up if Order has no Quote
      .control-group
        = f.label :custom_quote_reference, "Custom Quote Reference" , :class => 'control-label'
        .controls
          = f.text_field :custom_quote_reference, :class => "text_field"
      
      .control-group
        = f.label :supplier_id, "Supplier", :class => "control-label"
        .controls
          = f.select :supplier_id, Supplier.all.collect{|c| [c.name, c.id]}, {:include_blank => true}, :class => 'select'

    .control-group
      = f.label :client_id, :class => 'control-label'
      .controls
        = f.select :client_id, Client.all.collect{|c| [c.name, c.id]}, {:include_blank => true}, :class => 'select'

  %h3 Attachments
  %hr
  #attachments-fields
    = f.fields_for :attachments do |builder|
      = render "attachment_fields", {:f => builder}
    = link_to_add_fields "Click to add attachments" , f, :attachments

  %h4 Notes
  %hr
  .controls
    = f.text_area :description, :class => "span8", :rows => 5

  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), orders_path, :class => 'btn'

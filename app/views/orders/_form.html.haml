= form_for @order, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :reference, :class => 'control-label'
    .controls
      = f.text_field :reference, :class => 'text_field'
  .control-group
    = f.label :purchase_date, :class => 'control-label'
    .controls
      = f.date_select :purchase_date, :class => 'datetime_select'

  %fieldset
    %legend Purchase Requests

    = f.fields_for :quotes do |builder|
      = render 'quote_fields', :f => builder

    #purchase-requests
      = link_to_add_fields "Reference Quotation" , f, :quotes

  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), orders_path, :class => 'btn'

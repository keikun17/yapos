%h1 Delivery Monitoring

%h3 As of #{Date.today.to_s(:long)} (Last 20)
%table.table.table-bordered.table-compact{style: 'font-size: 8px !important'}
  %thead
    %tr
      %th{width: '40px'} PO#
      %th{width: '40px'} Client
      %th{width: '30px'} Qty
      %th.span4 Item
      %th{width: '50px'} Our PO#
      %th{width: '50px'} Client Purchased at
      %th{width: '50px'} Estimated EX-Works Date
      %th{width: '50px'} Estimated Delivery Date
      %th{width: '50px'} Delivered at
  %tbody
    - @decorated_orders.each do |order|
      - offer_count = order.offers.count
      - offers = order.offers
      - offer = offers.shift

      - if offer
        %tr
          %td
            %strong= link_to order.reference, order
          %td
            - if offer && offer.client
              = link_to(offer.client.name, client_path(offer.client))
          %td
            #{offer.request_quantity} #{offer.request_unit}
          %td
            = offer.specs
            .div{style: 'border: 1px solid black'}
              %strong Actual
              = offer.summary
          %td
            = offer.supplier_purchase_reference
            = offer.supplier_name
          %td
            %i= order.display_purchase_date
          %td
            %i= offer.supplier_order_estimated_manufacture_date
          %td
            %i= offer.supplier_order_estimated_delivery_date
          %td
            %i= offer.supplier_order_delivery_date

          - offers.each do |offer|
            %tr
              %td{style: 'border-top: none'}
              %td
                = link_to(offer.client.name, client_path(offer.client))
              %td
                #{offer.request_quantity} #{offer.request_unit}
              %td
                = offer.specs
                .div{style: 'border: 1px solid black'}
                  %strong Actual
                  = offer.summary
              %td
                = offer.supplier_purchase_reference
                = offer.supplier_name
              %td
                %i= order.display_purchase_date
              %td
                %i= offer.supplier_order_estimated_manufacture_date
              %td
                %i= offer.supplier_order_estimated_delivery_date
              %td
                %i= offer.supplier_order_delivery_date

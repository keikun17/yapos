.modal.hide.fade{id: 'vendor_code_form'}
  = form_for VendorItem.new, remote: true, html: {class: 'form-horizontal'} do |f|3
    .modal-header
      %button.close.data{data: {dismiss: 'modal'}, 'aria-hidden' => true} x
      %h3 Input Supplier PO# order for the client's order
    .modal-body
      .control-group
        = f.label :product_id, 'Product_id', class: 'control-label'
        .controls
          = f.select :product_id, Product.all.collect{|p| [p.name , p.id] }

    .modal-body
      .control-group
        = f.label :code, 'Vendor Item Code', class: 'control-label'
        .controls
          = f.text_field :code, class: 'span6 text_field'

    .modal-footer
      %button.btn{data: {dismiss:"modal"}, 'aria-hidden' => true} Close
      = f.submit nil, :class => 'btn btn-primary', remote: true
